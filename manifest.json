{
    "manifest_version": 3,
    "name": "YouTube Pause Lock",
    "version": "1.0",
    "description": "Prevents users (Ethan Klein) from repeatdly pausing YouTube videos.",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": ["tabs", "scripting", "activeTab", "storage"],
  
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/watch?*"],
        "js": [
          "content_script.js"
        ]
      }
    ],
    "icons": {
      "48": "icons/icon-medium.png",
      "128": "icons/icon-large.png",
      "16": "icons/icon-small.png"
    },
    "host_permissions": ["https://www.youtube.com/watch?*"]
  }